<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_card_note"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_note"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icone_note"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:background="#ddd"
                android:src="@drawable/note"
                android:layout_gravity="center_vertical"
                android:layout_margin="7dp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/titre_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="35dp"
                    android:text="Ma premiÃ¨re note de pour vkjkhj zdchdcjdhcdkjjs c njcnc sn"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/titre_note"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/date_note"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:text="10/01/17"/>

                    <TextView
                        android:id="@+id/barre"
                        android:layout_width="2dp"
                        android:layout_height="18dp"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:background="#bdbdbd"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:id="@+id/icone_alarme"
                        android:src="@drawable/ic_alarm"
                        android:layout_marginRight="5dp"
                        android:layout_toRightOf="@id/barre"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/description_note"
                        android:singleLine="true"
                        android:freezesText="true"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:text="Voici la description de ce fameuse note du 01 Octobre"
                        android:layout_marginRight="10dp"
                        android:textSize="16sp"/>
                </LinearLayout>

            </RelativeLayout>
            <ImageView
                android:id="@+id/overflow_notes"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_dots" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>